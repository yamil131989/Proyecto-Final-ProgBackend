<head>
    <style>
        table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

th,td { 
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
}

th{
    background-color: #c4b7b7;
}

ul { 
    list-style: none;
    padding: 0;
}

li {
    margin-bottom: 10px;
}

form {
    max-width: 400px;
    margin: 20px;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0 , 0.1);

}
label { 
    display: block;
    margin-bottom:0px;
    margin-top: 5px;
}
input {
    width: 100%;
    padding: 5px;
    margin-top: 4px;
    box-sizing: border-box;
}

button { 
    margin-top: 4px;
    background-color: #77d37a;
    width: 20%;
    margin-left: 40%;
    margin-right: 40%;
    display: flex;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

button:hover {
    background-color: #45a049;
}
    </style>
</head>
<div>
    <h1>Realtime Products</h1>

    <h3>Lista de productos:</h3>
    <table>
        <thead>
            <th>id</th>
            <th>title</th>
            <th>description</th>
            <th>code</th>
            <th>price</th>
            <th>status</th>
            <th>stock</th>
            <th>category</th>
            <th>Info</th>
            <th>Imagenes</th>           
        </thead>
        <tbody id="productos-body">
            
        </tbody>
    </table>
    <h2>Agregar Producto</h2>
    <form action="" id="form-producto">

    <label for="title">Titulo:</label>
    <input type="text" id="title" name="titulo" required>

    <label for="description">Descripcion:</label>
    <input type="text" id="description" name="description" required>

    <label for="code">Codigo:</label>
    <input type="text" id="code" name="code" required>

    <label for="price">Precio:</label>
    <input type="text" id="price" name="price" required>
    
    <label for="stock">Stock:</label>
    <input type="text" id="stock" name="stock" required>

    <label for="status">Status:</label>
    <input type="text" id="status" name="status" required>

    <label for="thumbnails">Imagenes:</label>
    <input type="text" id="thumbnails" name="thumbnails" >
    
    <label for="category">Category:</label>
    <input type="text" id="category" name="category" required>

    <button type="submit">Agregar</button>
    </form>

</div>
<script src=" /socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
